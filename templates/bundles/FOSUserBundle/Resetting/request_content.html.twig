{% trans_default_domain 'FOSUserBundle' %}

<div class="card">
    <div class="card-header">
        Reset Password
    </div>
    <div class="card-body">
        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
            <div class="form-group row">
                <label for="username" class="col-md-4 col-form-label text-md-right">{{ 'resetting.request.username'|trans }}</label>
                <div class="col-md-6">
                    <input type="text" id="username" name="username" required="required" class="form-control" autofocus/>
                </div>
            </div>
            <div class="form-group row mb-0">
                <div class="col-md-6 offset-md-4">
                    <input type="submit" class="btn btn-primary" value="{{ 'resetting.request.submit'|trans }}" />
                </div>
            </div>
        </form>
    </div>
</div>
